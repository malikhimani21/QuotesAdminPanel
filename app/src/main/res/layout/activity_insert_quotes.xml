<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".insertQuotes.InsertQuotesActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="8dp"
                android:text="Insert Quotes"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/insert_quotes_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="quotes id" />

            <EditText
                android:id="@+id/insert_quotes_cat_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp" />

            <Spinner
                android:id="@+id/insert_quotes_cat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:entries="@array/quotes_cat" />

            <EditText
                android:id="@+id/insert_quotes_quotes"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:hint="Quotes"
                android:inputType="textMultiLine" />

            <EditText
                android:id="@+id/insert_quotes_author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Quotes Author" />

            <EditText
                android:id="@+id/insert_quotes_desc1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Quotes description" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">

                <ProgressBar
                    android:id="@+id/insert_quotes_progressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:elevation="100dp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/insert_quotes_button"
                    android:layout_width="180dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:hint="Insert Quotes" />
            </FrameLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>